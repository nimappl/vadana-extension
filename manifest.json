{
    "name": "Vadana",
    "version": "1.0",
    "manifest_version": 3,
    "host_permissions": [
        "https://vadana23.iauec.ac.ir/course/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://vadana23.iauec.ac.ir/course/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_icon": { "16": "icon.png" },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}